<h1>Create a new todo:</h1>

<% if @todo.errors.any? %>
  <h2>Please correct the following errors:</h2>
  <ul>
    <% @todo.errors.full_messages.each do |msg| %>
    <li><%= msg %></li>
    <% end %>
  </ul>

<% end %>

<%= form_for @todo do |f| %>
  <p>
    <%= f.label :name %>
    <%= f.text_field :name %><br>
    <%= f.label :description %>
    <%= f.text_area :description %><br>
    <%= f.submit %>
    
  </p>
<% end %>